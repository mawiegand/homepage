<div class="row">
  <div class="col-md-4">
    <div class="card card-inverse card-primary text-xs-center colored-card">
      <div class="card-block">
        <%= image_tag "https://s.gravatar.com/avatar/0c9390b12a118da0006ffec78b666b2f?s=140", class: 'img-circle center-block' %>
      </div>
      <div class="card-block">
        <h4 class="card-title">Marcel Wiegand</h4>
        <p class="card-text">I am a software developer and student of Computer Science.</p>
        <a href="#" class="btn btn-outline-info">About me</a>
      </div>
      <div class="card-footer social-links">
        <%= link_to icon('github', class: 'fa-2x', 'aria-hidden' => true), 'http://github.com/mawiegand', 'aria-label' => 'Github' %>
        <%= link_to icon('linkedin', class: 'fa-2x', 'aria-hidden' => true), 'https://www.linkedin.com/in/marcelwiegand', 'aria-label' => 'LinkedIn' %>
        <%= link_to icon('google-plus', class: 'fa-2x', 'aria-hidden' => true), 'https://plus.google.com/+MarcelWiegand', 'aria-label' => 'Google+' %>
        <%= link_to icon('twitter', class: 'fa-2x', 'aria-hidden' => true), 'https://twitter.com/BP_doubleU', 'aria-label' => 'Twitter' %>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div id="latest-posts" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <% @posts.each_with_index do |post, index| %>
          <%= content_tag(:li, nil, data: { target: '#latest-posts', slide_to: index }, class: index == 0 ? 'active' : nil) %>
        <% end %>
      </ol>
      <div class="carousel-inner" role="listbox">
        <% @posts.each_with_index do |post, index| %>
          <%= content_tag(:div, render('posts/post_preview', post: post), class: ['carousel-item', index == 0 ? 'active' : nil]) %>
        <% end %>
      </div>
      <a class="left carousel-control" href="#latest-posts" role="button" data-slide="prev">
        <span class="icon-prev" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#latest-posts" role="button" data-slide="next">
        <span class="icon-next" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>
