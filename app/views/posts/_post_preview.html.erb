<article class="card card-inverse card-primary post-card-preview">
  <div class="card-header">
    <h2 class="card-title"><%= link_to post.title, post %></h2>
    <h3 class="card-subtitle text-muted">Submitted <%= post.created_at.strftime("%d. %B %Y") %></h3>
  </div>
  <div class="card-block">
    <p class="card-text"><%= post.body.truncate(SETTINGS['post_preview_sign_length']) %> <%= link_to 'read more', post %></p>
  </div>
  <footer class="card-footer">
    <small class="text-muted">Last updated <%= time_ago_in_words(post.updated_at) %> ago</small>
    <% if user_signed_in? %>
      <div class="actions">
        <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_post_path(post), class: 'btn-sm btn-primary' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")), post, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn-sm btn-danger' %>
      </div>
    <% end %>
  </footer>
</article>